<form action='/fig' method="post">
  <input id="figure_name" type="text" name="figure[name]">
  <input id="new_title" type="text" name="figure[title_ids][]">
  <input id="new_landmark" type="text" name="figure[landmark_ids][]">


  <% @landmarks.each do |landmark| %>
  <input id="landmark_<%=landmark.id%>" type="checkbox" name="landmark[name]" value="<%=landmark.name%>">landmark_<%=landmark.id%></input>
  <%end%>


  <% @titles.each do |title| %>
  <input id="title_<%=title.id%>" type="checkbox" name="title[name]" value="<%=title.name%>">title_<%=title.id%></input>
  <%end%>

  <input type="submit" value="Create New Figure">

</form>
